[flake8]
# Maximum line length
max-line-length = 127

# Ignore specific error codes
ignore = 
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator
    E402,  # Module level import not at top of file (common in notebooks)

# Exclude directories
exclude =
    .git,
    __pycache__,
    .ipynb_checkpoints,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = True

# Count errors
count = True

# Show statistics
statistics = True
